<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p>
        <strong>Status:</strong>
        <%= @game.status %>
      </p>
      <p>
        <strong>Owner:</strong>
        <%= @game.owner %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <strong>
        Participants:
      </strong>
      <% unless @game.players.include?(current_player) %>
        <%= link_to 'Join', player_participation_index_path(game: @game, player: current_player), method: :post, class: 'btn btn-outline-primary', style:'display:inline' if current_player %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1">&nbsp;</div>
    <div class="col-sm-11">
      <p>
        <% @game.players.each do |player| %>
          <p>
            <%= player %>
            <% if player == current_player %>
            <%= link_to 'Leave Game', player_participation_path(game: @game, player: player), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger', style:'display:inline' %>
            <% end %>
          </p>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'Edit', edit_game_path(@game) %> |
      <%= link_to 'Back', games_path %>
    </div>
  </div>
</div>

